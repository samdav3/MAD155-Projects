<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.menu.CYOFragment">

    <TextView
        android:id="@+id/cyoTitle"
        android:layout_width="413dp"
        android:layout_height="42dp"
        android:layout_marginTop="48dp"
        android:fontFamily="sans-serif"
        android:text="Create Your Own"
        android:textAlignment="center"
        android:textColor="#643200"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayoutFlavor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <LinearLayout
        android:id="@+id/linearLayoutFlavor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="21dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="60dp"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="20dp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayoutCream"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.8"
        app:layout_constraintStart_toEndOf="@+id/linearLayoutCoffee"
        app:layout_constraintTop_toBottomOf="@id/cyoTitle">

        <TextView
            android:id="@+id/flavorTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:padding="5dp"
            android:text="Flavor"
            android:textAlignment="center"
            android:textColor="#643200"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textViewVanilla"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vanilla"
            android:textColor="#643200"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textViewCaramel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Caramel"
            android:textColor="#643200"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textViewHazelnut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hazelnut"
            android:textColor="#643200"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textViewBlue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Blueberry"
            android:textColor="#643200"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textViewMocha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mocha"
            android:textColor="#643200"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textViewSC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Salted Caramel"
            android:textColor="#643200"
            android:textSize="16sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayoutCoffee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="40dp"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="20dp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayoutCream"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cyoTitle">

        <TextView
            android:id="@+id/coffeeTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:padding="5dp"
            android:text="Coffee"
            android:textAlignment="center"
            android:textColor="#643200"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textViewAmericano"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Americano"
            android:textColor="#643200"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textViewCB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cold Brew"
            android:textColor="#643200"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textViewLatte"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Latte"
            android:textColor="#643200"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textViewCap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cappucino"
            android:textColor="#643200"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textViewDecaf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Decaf"
            android:textColor="#643200"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textViewReg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Regular"
            android:textColor="#643200"
            android:textSize="16sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayoutCream"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="138dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="138dp"
        android:layout_marginBottom="135dp"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayoutFlavor">

        <TextView
            android:id="@+id/creamTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:padding="5dp"
            android:text="Cream"
            android:textAlignment="center"
            android:textColor="#643200"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textViewWhole"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Whole Milk"
            android:textColor="#643200"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textViewSkim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Skim Milk"
            android:textColor="#643200"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textViewOat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Oat Milk"
            android:textColor="#643200"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textViewCoco"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Coconut Milk"
            android:textColor="#643200"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textViewHeavyCream"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Heavy Cream"
            android:textColor="#643200"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textViewHalf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/half_half"
            android:textColor="#643200"
            android:textSize="16sp" />

    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        app:backgroundTint="#2A1500"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@android:drawable/ic_menu_add" />


</androidx.constraintlayout.widget.ConstraintLayout>