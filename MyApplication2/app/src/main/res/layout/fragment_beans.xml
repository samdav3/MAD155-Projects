<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.menu.BeansFragment">

    <TextView
        android:id="@+id/beansTitle"
        android:layout_width="413dp"
        android:layout_height="42dp"
        android:layout_marginTop="48dp"
        android:fontFamily="sans-serif"
        android:text="@string/beans"
        android:textAlignment="center"
        android:textColor="#643200"
        android:textSize="24sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/imageViewB"
        android:layout_width="146dp"
        android:layout_height="125dp"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="12dp"
        android:src="@drawable/coffee_2732109_1280"
        app:layout_constraintBottom_toTopOf="@+id/imageViewBM"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageViewBM"
        android:layout_width="146dp"
        android:layout_height="125dp"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="144dp"
        android:src="@drawable/coffee_sack_2296123_1280"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textViewB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="43dp"
        android:layout_marginTop="104dp"
        android:layout_marginEnd="76dp"
        android:layout_marginBottom="104dp"
        android:text="Brazilian Beans"
        android:textColor="#643200"
        android:textSize="16dp"
        app:layout_constraintBottom_toTopOf="@+id/textViewBM"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/imageViewB"
        app:layout_constraintTop_toBottomOf="@+id/textViewC" />

    <TextView
        android:id="@+id/textViewBM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="43dp"
        android:layout_marginTop="112dp"
        android:layout_marginEnd="32dp"
        android:text="Blue Mountain Beans"
        android:textColor="#643200"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.666"
        app:layout_constraintStart_toEndOf="@+id/imageViewBM"
        app:layout_constraintTop_toBottomOf="@+id/textViewB" />

    <TextView
        android:id="@+id/textViewC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="43dp"
        android:layout_marginTop="160dp"
        android:layout_marginEnd="60dp"
        android:text="Colombian Beans"
        android:textColor="#643200"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/imageViewC"
        app:layout_constraintTop_toBottomOf="@+id/beansTitle" />

    <ImageView
        android:id="@+id/imageViewC"
        android:layout_width="146dp"
        android:layout_height="125dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="77dp"
        android:layout_marginBottom="12dp"
        android:src="@drawable/coffee_1154353_1280"
        app:layout_constraintBottom_toTopOf="@+id/imageViewB"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/beansTitle"
        app:layout_constraintVertical_bias="0.733" />



</androidx.constraintlayout.widget.ConstraintLayout>